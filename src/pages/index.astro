function calculateExperienceInYears() {
  const careerStartDate = new Date("2012-10-01");
  const dateDiffInMilliseconds = Date.now() - careerStartDate.valueOf();
  return Math.abs(new Date(dateDiffInMilliseconds).getUTCFullYear() - 1970);
}
